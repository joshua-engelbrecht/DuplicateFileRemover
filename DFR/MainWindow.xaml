        <Button Content="Clear" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="116,117,0,0" Name="button3" VerticalAlignment="Top" Width="75" Click="button3_Click" />
        <TextBox Height="253" HorizontalAlignment="Left" Margin="15,12,0,0" Name="textBox2" VerticalAlignment="Top" Width="662" />
