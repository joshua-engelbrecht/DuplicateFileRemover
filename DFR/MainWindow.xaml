        <Grid.RowDefinitions>
            <RowDefinition Height="396*" />
            <RowDefinition Height="161*" />
        </Grid.RowDefinitions>
        <TextBox Height="201" HorizontalAlignment="Left" Margin="12,271,0,0" Name="textBox1" VerticalAlignment="Top" Width="665" VerticalScrollBarVisibility="Auto" Grid.RowSpan="2" />
